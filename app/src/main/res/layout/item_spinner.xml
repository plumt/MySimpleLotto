<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>
        <variable
            name="itemSpinner"
            type="com.yun.mysimplelotto.data.model.SpinnerModel" />
        
        <variable
            name="spinnerItemListener"
            type="com.yun.mysimplelotto.base.BaseRecyclerAdapter.OnItemClickListener" />
    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:onClick="@{(v) -> spinnerItemListener.onItemClick(itemSpinner, v)}"
        android:clickable="true"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="10dp"
                android:id="@+id/tv_spinner_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{itemSpinner.titleConvert(itemSpinner.title)}"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_marginTop="10dp"
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#999999"
                app:layout_constraintTop_toBottomOf="@id/tv_spinner_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>

</layout>
