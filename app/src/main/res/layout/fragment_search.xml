<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="search"
            type="com.yun.mysimplelotto.ui.search.SearchViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cv_month"
            android:id="@+id/cv_year"
            app:strokeColor="@color/color_777777"
            android:backgroundTint="@color/white"
            app:cardElevation="0dp"
            android:clickable="true"
            app:cardCornerRadius="0dp"
            app:strokeWidth="1dp"
            android:layout_marginTop="30dp"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tv_year"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="@{search.yearTitle + ` 년`}"
                />


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/cv_year"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/cv_month"
            app:strokeColor="@color/color_777777"
            android:backgroundTint="@color/white"
            app:cardElevation="0dp"
            app:cardCornerRadius="0dp"
            android:clickable="true"
            app:strokeWidth="1dp"
            android:layout_marginTop="30dp"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tv_month"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="@{search.monthTitle + ` 월`}"
                />


        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>